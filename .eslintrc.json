{
  "extends": ["prettier", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "parser": "@babel/eslint-parser"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": ["svelte3"],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "ignorePatterns": ["**/build/**/*.js"]
}
